<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="15dp" />
            <!-- Padding, in this case, around the button's text -->
            <padding android:bottom="10dp" android:left="16dp" android:right="20dp" android:top="12dp" />

            <solid android:color="#f58ef0" />

            <stroke android:width="1dp" android:color="@color/lightgray" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="15dp" />
            <!-- Padding, in this case, around the button's text -->
            <padding android:bottom="10dp" android:left="16dp" android:right="20dp" android:top="12dp" />

            <solid android:color="#E7E7E7" />

            <stroke android:width="1dp" android:color="@color/lightgray" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="15dp" />
            <!-- Padding, in this case, around the button's text -->
            <padding android:bottom="10dp" android:left="16dp" android:right="20dp" android:top="12dp" />

            <solid android:color="#f58ef0" />

            <stroke android:width="1dp" android:color="@color/lightgray" />
        </shape>
    </item>

</selector>